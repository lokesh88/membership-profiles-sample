<!DOCTYPE html>
<html>
<head>
  <title>MembershipProfilesSample</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<% if user_signed_in? %>	
	<div class="row AL-signout MS-search">
		<div class="span6 search-wraper">
			<%= form_tag(search_users_path, :method => "get") do %>
			  <div id="search_text"></div>
			  <%= submit_tag("Search", :class => "btn search") %>
			<% end %>
		</div>
		<div class="span4">
			<%= link_to "Home", root_path %> | 
			<%= link_to "sign_out", destroy_user_session_path, :method => :delete %>
		</div>
	</div>
	<% if flash[:alert] %>
	<div class="alert alert-info">
		<%= flash[:alert] %>
	<div>
	<% end %>
	<% end %>
	<%= yield %>
</div>

<script>
 $(function() {
    $("#search_text" ).magicSuggest({
        id: 'search_text',
        name: 'q',
        class: 'search-query',
	    allowFreeEntries: false,
        data: "<%=User.all.map(&:name).join(', ')%>",
        value: '["<%=params["q"]%>"]',
		maxDropHeightinteger: 120,
		maxSelection: 1,
		hideTrigger: true
    });
  });
</script>

</body>
</html>
